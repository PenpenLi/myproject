<?xml version="1.0" encoding="UTF-8" ?>    
<!DOCTYPE mapper    
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"    
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kunlun.poker.data.ServerMapper" >
    <select id="selectServer" resultType="com.kunlun.poker.domain.ServerNode">
        select * from server where id=#{id}
    </select>
    <select id="selectServers" resultType="com.kunlun.poker.domain.ServerNode">
        select * from server
    </select>
</mapper>