<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<environments default="center">
		<environment id="center">
			<transactionManager type="JDBC" />
			<dataSource type="UNPOOLED">
				<property name="driver" value="${db.center.driver}" />
				<property name="url" value="${db.center.url}" />
				<property name="username" value="${db.center.username}" />
				<property name="password" value="${db.center.password}" />
			</dataSource>
		</environment>
	</environments>
    <mappers>
        <mapper resource="com/kunlun/poker/data/ServerMapper.xml"/>
        <mapper resource="com/kunlun/poker/data/SettingMapper.xml"/>
    </mappers>
</configuration>