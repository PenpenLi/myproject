<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
			   xmlns:s="library://ns.adobe.com/flex/spark"
			   xmlns:mx="library://ns.adobe.com/flex/mx"
			   xmlns:views="poker.views.*"
			   >
	<fx:Style>
		@namespace s "library://ns.adobe.com/flex/spark";
		@namespace views "views.*";
		@namespace mx "library://ns.adobe.com/flex/mx";
		
		* {
			fontSize: 12px;
			fontFamily: SimSun
		}
	</fx:Style>
	<s:states>
		<s:State name="noLoggedIn" />
		<s:State name="loggedIn" />
	</s:states>
	<fx:Script>
		<![CDATA[
			import poker.events.LoginEvent;
			
			protected function loginHandler(event:LoginEvent):void
			{
				currentState = "loggedIn";
			}
		]]>
	</fx:Script>
	<s:Scroller width="100%" height="100%">
		<s:Group width="100%">
			<s:layout>
				<s:VerticalLayout horizontalAlign="center" />
			</s:layout>
			<s:Group width="100%">
				<s:Image source="assets/logo.gif" />
				<s:Rect width="100%" top="75" height="25">
					<s:fill>
						<s:SolidColor color="0xff6d06" />
					</s:fill>
					<s:filters>
						<s:DropShadowFilter inner="true" alpha="0.1" />
					</s:filters>
				</s:Rect>
			</s:Group>
			<views:LoginView login="loginHandler(event)" width="100%" includeIn="noLoggedIn" />
			<views:MainView width="100%"  includeIn="loggedIn" />
			<s:Line width="100%">
				<s:stroke>
					<s:SolidColorStroke color="0xeeeeee" />
				</s:stroke>
			</s:Line>
			<s:Label text="© 2014 昆仑在线 发行中心 棋牌组" />
		</s:Group>
	</s:Scroller>
</s:Application>
