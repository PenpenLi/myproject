<?xml version="1.0" encoding="utf-8"?>
<s:NavigatorContent xmlns:fx="http://ns.adobe.com/mxml/2009"
					xmlns:s="library://ns.adobe.com/flex/spark"
					xmlns:mx="library://ns.adobe.com/flex/mx">
	<fx:Metadata>
		[Event(name="login", type="poker.events.LoginEvent")]
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			import spark.components.Alert;
			
			import poker.events.LoginEvent;
			protected function loginButton_clickHandler(event:MouseEvent):void {
				if(usernameInput.text == "admin" && passwordInput.text == "admin") {
					dispatchEvent(new LoginEvent(LoginEvent.LOGIN));
				}
				else {
					Alert.show("用户名或密码错误");
				}
			}
		]]>
	</fx:Script>
	<s:BorderContainer top="50" bottom="50" width="400" height="200" borderWeight="0"
					   cornerRadius="10" horizontalCenter="0" verticalCenter="0">
		<s:backgroundFill>
			<s:LinearGradient rotation="90">
				<s:entries>
					<mx:GradientEntry alpha="0.5" color="0xEEEEEE" ratio="0.00"/>
					<mx:GradientEntry alpha="0.5" color="0xAAAAAA" ratio="1"/>
				</s:entries>
			</s:LinearGradient>
		</s:backgroundFill>
		<s:Form horizontalCenter="0" verticalCenter="0">
			<s:layout>
				<s:FormLayout gap="-5"/>
			</s:layout>
			<s:FormHeading label="登录到您的账户" textAlign="center"/>
			<s:FormItem label="用户名">
				<s:TextInput id="usernameInput" />
			</s:FormItem>
			<s:FormItem label="密码">
				<s:TextInput id="passwordInput" displayAsPassword="true"/>
			</s:FormItem>
			<s:Group width="100%" height="40">
				<s:Button id="loginButton" bottom="0" label="登陆"
						  click="loginButton_clickHandler(event)" horizontalCenter="0"/>
			</s:Group>
		</s:Form>
	</s:BorderContainer>
</s:NavigatorContent>
