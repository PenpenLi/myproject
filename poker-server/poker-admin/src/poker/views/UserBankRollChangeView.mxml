<?xml version="1.0" encoding="utf-8"?>
<s:NavigatorContent xmlns:fx="http://ns.adobe.com/mxml/2009" 
					xmlns:s="library://ns.adobe.com/flex/spark" 
					xmlns:mx="library://ns.adobe.com/flex/mx" label="用户筹码变化信息" xmlns:comps="poker.comps.*" preinitialize="preinitializeHandler(event)">
	<s:layout>
		<s:VerticalLayout horizontalAlign="center" />
	</s:layout>
	<fx:Script>
		<![CDATA[
			import mx.controls.Alert;
			import mx.events.FlexEvent;
			import mx.rpc.events.FaultEvent;
			import mx.rpc.events.ResultEvent;
			
			import poker.Config;
			import poker.events.PaginationEvent;
			import poker.util.DataUtil;
			
			private static var _instance : UserBankRollChangeView;
			
			public static function get instance():UserBankRollChangeView
			{
				return _instance;
			}
			
			[Bindable]
			private var model : Object;

			protected function paginateHandler(event:PaginationEvent):void
			{
				search((event.page - 1) * Config.PAGESIZE);
			}
			
			protected function searchButton_clickHandler(event:MouseEvent):void
			{
				search(0);
			}
			
			private function search(from : int) : void
			{
				httpService.send({
					userId : userIdInput.text,
					startTime: dateFieldStart.selectedDate.getTime() / 1000,
					endTime: dateFieldStart.selectedDate.getTime() / 1000,
					from : from,
					size : Config.PAGESIZE
				});
			}
			
			protected function httpService_resultHandler(event:ResultEvent):void
			{
				model = JSON.parse(String(event.result));
			}
			
			protected function httpService_faultHandler(event:FaultEvent):void
			{
				Alert.show(event.toString());
			}
			
			protected function preinitializeHandler(event:FlexEvent):void
			{
				_instance = this;
			}
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<s:HTTPService id="httpService" url="{Config.URLBASE}chip/selectUserChipChange.htm" result="httpService_resultHandler(event)" fault="httpService_faultHandler(event)"/>
	</fx:Declarations>
	
	<s:Group>
		<s:layout>
			<s:HorizontalLayout horizontalAlign="center" verticalAlign="middle" gap="5" />
		</s:layout>
		<s:Label text="userId" />
		<s:TextInput id="userIdInput"/>
		<s:Label text="开始时间范围" />
		<mx:DateField id="dateFieldStart" formatString="YYYY-MM-DD"/>
		<s:Label text="结束时间范围" />
		<mx:DateField id="dateFieldEnd" formatString="YYYY-MM-DD" />
		<s:Button id="searchButton" label="查询" click="searchButton_clickHandler(event)" />
	</s:Group>
	
	<s:Line width="100%">
		<s:stroke>
			<s:SolidColorStroke color="0xeeeeee" />
		</s:stroke>
	</s:Line>
	
	<s:DataGrid width="100%" height="500">
		<s:columns>
			<s:ArrayList>
				<s:GridColumn dataField="userId" headerText="玩家ID" />
				<s:GridColumn dataField="changeBankRoll" headerText="变化筹码"/>
				<s:GridColumn dataField="totalBankRoll" headerText="全部筹码"/>
				<s:GridColumn dataField="startTime" headerText="开始时间"/>
				<s:GridColumn dataField="endTime" headerText="结束时间" />
			</s:ArrayList>
		</s:columns>
		<s:ArrayCollection source="{model.list}" />
	</s:DataGrid>
	
	<comps:Paginator id="paginator" paginate="paginateHandler(event)" page="{DataUtil.getPage(model)}" total="{DataUtil.getTotal(model)}"/>
</s:NavigatorContent>
